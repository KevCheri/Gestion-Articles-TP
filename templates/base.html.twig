<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.css">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
        {% endblock %}
        <style>
            form {
                margin: 30px;
            }

            h3, h5 {
                margin-left: 20px;
            }

            footer {
                opacity: 0.9;
                z-index: 9999;
            }
        </style>
    </head>
    <body>

    
    <header class="navbar navbar-expand-md navbar-dark bg-primary">

            <a href="{{ path('article_index') }}" class="navbar-brand">
              <img src="images/.png" width=90px height=60px alt="ArticleMania">
            </a>

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-content">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar-content">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item"><a href="{{ path('article_index') }}" class="nav-link">Show all articles</a></li>
                    {% if app.user %}
                  <li class="nav-item"><a href="{{ path('article_user',{'id': app.user.id}) }}" class="nav-link">My articles</a></li>
                  <li class="nav-item"><a href="{{ path('article_new') }}" class="nav-link">Create new article</a></li>{% endif %}
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                      <a href="#" class="nav-link dropdown-toggle" id="dropdownbtn" data-toggle="dropdown">Account</a>
                      <ul class="dropdown-menu">
                          <li class="dropdown-item"><a href="">Edit Profil</a></li>
                          <li class="dropdown-item"><a href=""></a></li>
                          <li class="dropdown-item"><a href="">Delete Account</a></li>
                      </ul>
                  </li>
                    <li class="nav-item"><a href="{{ path('app_logout') }}" class="nav-link"><i class="fas fa-sign-in-alt"></i>DÃ©connexion</a></li>
                </ul>
            </div>

    </header>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }} alert alert-dismissible alert-primary">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

        {% block body %}{% endblock %}
        {% block javascripts %}

        {% endblock %}

    <footer class="navbar fixed-bottom ms-auto bg-primary"> @Copyright </footer>
    </body>
</html>
